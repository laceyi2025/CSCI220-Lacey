            <label for="contactName">Name:</label><br />
            <input type="text" size="19" name="contactName" id="contactName"><br><br>
            <label for="contactComment">Message:</label><br />
            <textarea name="" rows="6" cols="20">
            </textarea><br><br> 
            <input type="submit" value="Submit">
        </form>
